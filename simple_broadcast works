
#server client broadcast works cool
server side

from socket import *
s = socket(AF_INET, SOCK_DGRAM)
s.setsockopt(SOL_SOCKET, SO_BROADCAST, 1)
s.sendto("hi i am server!", ("192.168.1.255", 12345))

client side

from socket import *
s = socket(AF_INET, SOCK_DGRAM)
s.bind(("192.168.1.255",12345))
print s.recvfrom(4096)[0]
