
#server client broadcast works cool
server side

from socket import *
import netifaces as ni
ni.ifaddresses('enp0s3')
ip=ni.ifaddresses('enp0s3')[ni.AF_INET][0]['addr']
s = socket(AF_INET, SOCK_DGRAM)
host="192.168.1.255"
port=12345
address=host,port
s.setsockopt(SOL_SOCKET, SO_BROADCAST, 1)
s.sendto(ip.encode(), (address))

client side

from socket import *
s = socket(AF_INET, SOCK_DGRAM)
s.bind(("192.168.1.255",12345))
print s.recvfrom(4096)[0]
